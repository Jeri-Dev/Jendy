@using Jendy.Core.Application.ViewModels.User;
@model LoginViewModel

@{

    ViewData["Title"] = "Login";

}

<div class="row mt-5">
    <div class="col-6 offset-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" asp-action="Login" asp-controller="User">
                    <div class="mb-3">
                        <label asp-for="UserName" for="username">Username</label>
                        <input asp-for="UserName" class="form-control" id="username" name="username" required>
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="password">Password</label>
                        <input asp-for="Password" class="form-control" id="password" name="password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>



                    <a asp-controller="User" asp-action="RegisterView">Registrarse</a>
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </form>

            </div>
        </div>
    </div>
</div>

